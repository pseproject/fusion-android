<resources>

  <style name="Ubiq" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:colorPrimary">@color/primary</item>
    <item name="android:colorPrimaryDark">@color/primary_dark</item>
    <item name="android:colorBackground">@color/background_light</item>
    <item name="android:textColorPrimary">@color/primary_text_color</item>
    <item name="android:textColorSecondary">@color/secondary_text_color</item>
    <item name="android:colorAccent">@color/accent</item>
    <item name="android:navigationBarColor">@color/background_super_dark</item>
    <item name="android:statusBarColor">@color/background_super_dark</item>
    <item name="android:textColorHint">@color/hint_disabled_dark</item>
    <item name="android:windowBackground">@color/background_light</item>
    <item name="android:colorEdgeEffect">@color/secondary_light_color</item>
    <item name="android:windowAllowEnterTransitionOverlap">true</item>
    <item name="android:windowAllowReturnTransitionOverlap">true</item>
    <item name="android:windowSharedElementsUseOverlay">false</item>
    <item name="android:alertDialogTheme">@style/AlertDialogTheme</item>
    <item name="android:actionBarStyle">@style/ThemeOverlay.Ubiq.Dark</item>
    <item name="patternViewStyle">@style/Widget.Ubiq.PatternView</item>
  </style>

  <style name="Ubiq.Splash">
    <item name="android:windowBackground">@drawable/background_splash</item>
  </style>

  <style name="Ubiq.OnBoarding">
    <item name="android:navigationBarColor">@color/background_super_dark</item>
    <item name="android:statusBarColor">@color/background_super_dark</item>
    <item name="android:windowBackground">@color/background_super_dark</item>
    <item name="android:checkboxStyle">@style/Widget.Ubiq.CheckStyle.Light</item>
  </style>

  <style name="ThemeOverlay.Ubiq.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

  <style name="ThemeOverlay.Ubiq.Dark" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    <item name="android:background">@color/background_super_dark</item>
    <item name="titleTextStyle">@style/TextAppearance.Ubiq.ToolbarTitle</item>
  </style>

  <style name="TextAppearance.Ubiq.ToolbarTitle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
    <item name="fontPath">@string/bold_font</item>
    <item name="android:letterSpacing">0.3</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:textColor">@color/primary_text_color</item>
  </style>

  <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
    <item name="colorPrimary">@color/primary</item>
    <item name="colorPrimaryDark">@color/primary_dark</item>
    <item name="colorAccent">@color/accent</item>
  </style>

  <style name="Widget.Ubiq.CheckStyle.Light" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
    <item name="android:buttonTint">@color/white</item>
    <item name="android:textColor">@color/primary_text_color</item>
  </style>

  <style name="Widget.Ubiq.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
    <item name="fontPath">@string/regular_font</item>
  </style>

  <style name="Widget.Ubiq.BasePatternView" parent="">
    <item name="pl_rowCount">3</item>
    <item name="pl_columnCount">3</item>
    <item name="pl_aspect">square</item>
  </style>

  <style name="Widget.Ubiq.PatternView" parent="Widget.Ubiq.BasePatternView">
    <item name="pl_regularColor">@color/primary_text_color</item>
    <item name="pl_errorColor">@color/pattern_view_error</item>
    <item name="pl_successColor">@color/accent</item>
  </style>

  <style name="Widget.Ubiq.PatternView.Light">
    <item name="pl_regularColor">?colorControlNormal</item>
    <item name="pl_errorColor">@color/pattern_view_error</item>
    <item name="pl_successColor">@color/accent</item>
  </style>
</resources>
